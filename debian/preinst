#!/bin/bash

#DEBHELPER#

# preinst script for mx-system

#set -e

case "$1" in
  install|upgrade) dpkg-divert --quiet                                               \
                               --add                                                 \
                               --package mx-system      \
                               --rename                                              \
                               --divert /usr/lib/os-release.distrib \
                               /usr/lib/os-release 2>/dev/null
                   ;;

                *) :
                   ;;
esac 

exit 0
